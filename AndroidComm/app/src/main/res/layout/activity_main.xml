<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="16dp"
    tools:context="com.jujucecedudu.androidcomm.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_available_devices"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Discovered devices :\n"/>
    </ScrollView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_mode_text"/>

    <Button
        android:id="@+id/bt_toggle_bluetooth"
        android:text="Toggle Bluetooth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="toggleBluetooth"/>
    <Button
        android:id="@+id/bt_write"
        android:text="Say hello"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="sayHello"/>
</LinearLayout>
